            { "name": "openai-audio", "description": "OpenAI GPT-4o-audio-preview", "voices": [ "alloy", "echo", "fable", "onyx", "nova", "shimmer", "coral", "verse", "ballad", "ash", "sage", "amuch", "dan" ], "provider": "Azure", "input_modalities": [ "text", "image", "audio" ], "output_modalities": [ "audio", "text" ], "vision": true, "audio": true }
        ];

        // Selected AI model
        let selectedModel = localStorage.getItem('selectedModel') || 'openai';

        // Fungsi untuk mendapatkan icon berdasarkan provider
        function getProviderIcon(provider) {
            const providerIcons = {
                "Azure": "fab fa-microsoft",
                "Scaleway": "fas fa-server",
                "Cloudflare": "fas fa-cloud",
                "Modal": "fas fa-cube",
                "DeepSeek": "fas fa-search"
            };
            return providerIcons[provider] || "fas fa-robot";
        }

        // Fungsi untuk menampilkan dan memilih model AI
        function initializeModelSelector() {
            const modelTagsContainer = document.getElementById('modelTagsContainer');
            modelTagsContainer.innerHTML = '';
            
            // Kelompokkan model berdasarkan kategori
            const modelCategories = {
                "General": AI_MODELS.filter(model => !model.reasoning && !model.uncensored && !model.audio),
                "Reasoning": AI_MODELS.filter(model => model.reasoning),
                "Uncensored": AI_MODELS.filter(model => model.uncensored),
                "Multimodal": AI_MODELS.filter(model => model.vision || model.audio)
            };
            
            // Buat elemen untuk setiap kategori
            for (const [category, models] of Object.entries(modelCategories)) {
                if (models.length === 0) continue;
                
                const categoryDiv = document.createElement('div');
                categoryDiv.style.marginBottom = '0.5rem';
                
                const categoryTitle = document.createElement('div');
                categoryTitle.textContent = category;
                categoryTitle.style.fontSize = '0.8rem';
                categoryTitle.style.color = 'var(--gray)';
                categoryTitle.style.marginBottom = '0.3rem';
                categoryDiv.appendChild(categoryTitle);
                
                const tagsDiv = document.createElement('div');
                tagsDiv.style.display = 'flex';
                tagsDiv.style.flexWrap = 'wrap';
                tagsDiv.style.gap = '0.3rem';
                
                models.forEach(model => {
                    const modelTag = document.createElement('div');
                    modelTag.className = `model-tag tooltip ${model.name === selectedModel ? 'active' : ''}`;
                    
                    // Buat teks modalitas
                    let modalitiesText = `Input: ${model.input_modalities.join(", ")} | Output: ${model.output_modalities.join(", ")}`;
                    if (model.vision) modalitiesText += " | Vision";
                    if (model.audio) modalitiesText += " | Audio";
                    if (model.uncensored) modalitiesText += " | Unfiltered";
                    
                    modelTag.innerHTML = `
                        <i class="${getProviderIcon(model.provider)}"></i>
                        <span>${model.name}</span>
                        <span class="tooltiptext">
                            <strong>${model.description}</strong><br>
                            Provider: ${model.provider}<br>
                            ${modalitiesText}
                        </span>
                    `;
                    
                    modelTag.addEventListener('click', () => {
                        selectedModel = model.name;
                        localStorage.setItem('selectedModel', selectedModel);
                        updateModelTags();
                        logToConsole(`Model AI dipilih: ${model.name} (${model.description})`);
                    });
                    
                    tagsDiv.appendChild(modelTag);
                });
                
                categoryDiv.appendChild(tagsDiv);
                modelTagsContainer.appendChild(categoryDiv);
            }
            
            // Tampilkan info model yang dipilih
            showSelectedModelInfo();
        }

        function updateModelTags() {
            const modelTags = document.querySelectorAll('.model-tag');
            modelTags.forEach(tag => {
                tag.classList.remove('active');
                if (tag.querySelector('span').textContent === selectedModel) {
                    tag.classList.add('active');
                }
            });
            showSelectedModelInfo();
        }

        function showSelectedModelInfo() {
            const modelInfoDiv = document.getElementById('modelInfo');
            const selectedModelData = AI_MODELS.find(model => model.name === selectedModel);
            
            if (selectedModelData) {
                modelInfoDiv.innerHTML = `
                    <div class="model-tag active">
                        <i class="${getProviderIcon(selectedModelData.provider)}"></i>
                        <span>${selectedModelData.name}</span>
                    </div>
                `;
            }
        }

        // Fungsi untuk menghasilkan contoh acak
        async function generateRandomExamples() {
            const examplePrompts = [
                "Berikan 4 contoh pertanyaan menarik tentang teknologi",
                "Buatkan 4 ide pertanyaan umum tentang kehidupan sehari-hari",
                "Generate 4 pertanyaan populer tentang kesehatan dan kebugaran",
                "Buat 4 contoh pertanyaan menarik tentang pendidikan",
                "Berikan 4 ide pertanyaan random yang bermanfaat"
            ];

            const randomPrompt = examplePrompts[Math.floor(Math.random() * examplePrompts.length)];
            const encodedPrompt = encodeURIComponent(randomPrompt);
            
            try {
                const response = await fetch(`https://text.pollinations.ai/${encodedPrompt}`);
                
                if (!response.ok) {
                    throw new Error(`Error API: ${response.status}`);
                }
                
                const data = await response.text();
                return data.split('\n')
                          .filter(line => line.trim().length > 0)
                          .map(line => line.replace(/^\d+\.\s*/, '').trim())
                          .slice(0, 4);
            } catch (error) {
                console.error("Error generating examples:", error);
                // Fallback examples if API fails
                return [
                    "Jelaskan AI seperti ke anak 5 tahun",
                    "Bahasa pemrograman terbaik di 2024",
                    "Cara membuat pasta yang sempurna",
                    "Manfaat olahraga teratur"
                ];
            }
        }

        // Fungsi untuk menampilkan contoh
        async function loadExamples() {
            const examplesContainer = document.getElementById('exampleChipsContainer');
            const examples = await generateRandomExamples();
            
            examplesContainer.innerHTML = '';
            
            const icons = [
                'fas fa-child',
                'fas fa-code',
                'fas fa-utensils',
                'fas fa-running',
                'fas fa-book',
                'fas fa-flask',
                'fas fa-globe',
                'fas fa-heart'
            ];
            
            examples.forEach((example, index) => {
                const chip = document.createElement('div');
                chip.className = 'example-chip';
                chip.innerHTML = `
                    <i class="${icons[index % icons.length]}"></i> ${example}
                `;
                chip.addEventListener('click', () => useExample(example));
                examplesContainer.appendChild(chip);
            });
            
            logToConsole('Contoh pertanyaan acak telah dihasilkan');
        }

        // Contoh Penggunaan
        function useExample(exampleText) {
            const promptInput = document.getElementById('prompt');
            promptInput.value = exampleText;
            promptInput.focus();
            document.getElementById('clearInput').style.display = 'block';
            logToConsole(`Contoh dimuat: "${exampleText}"`);
        }

        // Animasi Progress Bar
        function animateProgressBar(duration) {
            const progressBar = document.getElementById('progressBar');
            const progressContainer = document.getElementById('progressContainer');
            progressContainer.style.display = 'block';
            progressBar.style.width = '0%';
            
            let start = null;
            const step = (timestamp) => {
                if (!start) start = timestamp;
                const progress = Math.min((timestamp - start) / duration, 1);
                progressBar.style.width = `${progress * 100}%`;
                
                if (progress < 1) {
                    window.requestAnimationFrame(step);
                }
            };
            
            window.requestAnimationFrame(step);
        }

        // History management
        const HISTORY_KEY = 'ai_chat_history';
        let chatHistory = JSON.parse(localStorage.getItem(HISTORY_KEY)) || [];

        function saveToHistory(prompt, response) {
            // Batasi riwayat hingga 50 item terbaru
            if (chatHistory.length >= 50) {
                chatHistory.shift();
            }
            
            const timestamp = new Date().toISOString();
            chatHistory.push({
                prompt,
                response,
                timestamp,
                model: selectedModel
            });
            
            localStorage.setItem(HISTORY_KEY, JSON.stringify(chatHistory));
            renderHistory();
            logToConsole('Percakapan disimpan ke riwayat');
        }

        function renderHistory() {
            const historyItems = document.getElementById('historyItems');
            historyItems.innerHTML = '';
            
            if (chatHistory.length === 0) {
                historyItems.innerHTML = '<div class="history-item">Tidak ada riwayat percakapan</div>';
                return;
            }
            
            // Tampilkan dalam urutan terbalik (terbaru pertama)
            [...chatHistory].reverse().forEach((item, index) => {
                const historyItem = document.createElement('div');
                historyItem.className = 'history-item';
                
                const modelData = AI_MODELS.find(m => m.name === item.model) || {};
                
                historyItem.innerHTML = `
                    <div style="font-weight: bold; margin-bottom: 0.3rem;">${item.prompt}</div>
                    <div style="font-size: 0.8rem; color: var(--gray); margin-bottom: 0.3rem;">
                        ${new Date(item.timestamp).toLocaleString()}
                        <span style="margin-left: 0.5rem; background: var(--border); padding: 0.2rem 0.4rem; border-radius: 4px; font-size: 0.7rem;">
                            ${modelData.name || item.model}
                        </span>
                    </div>
                    <div style="font-size: 0.9rem; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                        ${item.response.replace(/<br>/g, ' ').substring(0, 60)}...
                    </div>
                `;
                
                historyItem.addEventListener('click', () => {
                    loadFromHistory(item);
                });
                
                historyItems.appendChild(historyItem);
            });
        }

        function loadFromHistory(item) {
            document.getElementById('prompt').value = item.prompt;
            document.getElementById('response').innerHTML = item.response;
            document.getElementById('response').classList.remove('empty');
            
            // Update model jika berbeda
            if (item.model !== selectedModel) {
                selectedModel = item.model;
                localStorage.setItem('selectedModel', selectedModel);
                updateModelTags();
            }
            
            // Update metadata
            document.getElementById('response-meta').innerHTML = `
                <span>Diambil dari riwayat</span>
                <span>${new Date(item.timestamp).toLocaleString()}</span>
            `;
            
            hideHistory();
            logToConsole(`Memuat percakapan dari riwayat: "${item.prompt}"`);
        }

        function clearHistory() {
            chatHistory = [];
            localStorage.removeItem(HISTORY_KEY);
            renderHistory();
            logToConsole('Riwayat percakapan dihapus');
        }

        function toggleHistory() {
            const historyContainer = document.getElementById('historyContainer');
            if (historyContainer.style.display === 'block') {
                hideHistory();
            } else {
                showHistory();
            }
        }

        function showHistory() {
            const historyContainer = document.getElementById('historyContainer');
            historyContainer.style.display = 'block';
            renderHistory();
        }

        function hideHistory() {
            document.getElementById('historyContainer').style.display = 'none';
        }

        // Fungsi Generasi Utama
        async function generateText() {
            const prompt = document.getElementById('prompt').value.trim();
            
            // Validasi input
            if (!prompt) {
                showInputError('Masukkan pertanyaan terlebih dahulu');
                logToConsole('Error: Masukkan pertanyaan terlebih dahulu', 'error');
                return;
            }
            
            if (prompt.length > 1000) {
                showInputError('Pertanyaan terlalu panjang (maksimal 1000 karakter)');
                logToConsole('Error: Pertanyaan terlalu panjang', 'error');
                return;
            }
            
            hideInputError();

            const submitBtn = document.getElementById('submit');
            const buttonText = document.getElementById('button-text');
            const buttonIcon = submitBtn.querySelector('i');
            const responseDiv = document.getElementById('response');
            const metaDiv = document.getElementById('response-meta');
            
            // Tampilkan status loading
            submitBtn.disabled = true;
            buttonText.textContent = 'Memproses';
            buttonIcon.className = 'fas fa-spinner fa-spin';
            responseDiv.innerHTML = '<div class="loading"></div> Sedang memproses permintaan Anda...';
            responseDiv.classList.remove('empty');
            metaDiv.textContent = '';
            
            // Mulai progress bar
            animateProgressBar(2000);
            
            logToConsole(`Mengirim permintaan ke model ${selectedModel}: "${prompt}"`);

            try {
                const startTime = performance.now();
                const encodedPrompt = encodeURIComponent(prompt);
                
                // Simulasi progres (ganti dengan fetch sebenarnya)
                for (let i = 0; i < 5; i++) {
                    await new Promise(resolve => setTimeout(resolve, 300));
                    logToConsole(`Memproses dengan ${selectedModel}... (langkah ${i + 1}/5)`);
                }
                
                // Panggilan API sebenarnya
                const response = await fetch(`https://text.pollinations.ai/${encodedPrompt}`);
                
                if (!response.ok) {
                    throw new Error(`Error API: ${response.status}`);
                }
                
                const data = await response.text();
                const endTime = performance.now();
                const responseTime = endTime - startTime;
                
                // Tampilkan hasil
                responseDiv.innerHTML = data.replace(/\n/g, '<br>');
                
                metaDiv.innerHTML = `
                    <span>Dihasilkan dalam ${responseTime.toFixed(0)}ms</span>
                    <span>${data.length} karakter</span>
                    <span>Model: ${selectedModel}</span>
                `;
                
                // Simpan ke riwayat
                saveToHistory(prompt, data.replace(/\n/g, '<br>'));
                
                logToConsole(`Respon diterima dari ${selectedModel} dalam ${responseTime.toFixed(0)}ms`, 'success');
                
            } catch (error) {
                responseDiv.innerHTML = `<p style="color: var(--error);"><i class="fas fa-exclamation-triangle"></i> Error: ${error.message}</p>`;
                logToConsole(`Error dari model ${selectedModel}: ${error.message}`, 'error');
                console.error("Error API:", error);
                
                // Update status indicator
                updateStatus('error', `Error: ${error.message}`);
                
                // Set timeout to return to normal status
                setTimeout(() => {
                    updateStatus('connected', 'Sistem siap digunakan');
                }, 3000);
            } finally {
                submitBtn.disabled = false;
                buttonText.innerHTML = 'Hasilkan Jawaban';
                buttonIcon.className = 'fas fa-magic';
                document.getElementById('progressContainer').style.display = 'none';
            }
        }

        // Event listeners
        document.getElementById('submit').addEventListener('click', generateText);
        document.getElementById('historyBtn').addEventListener('click', toggleHistory);
        document.getElementById('clearHistoryBtn').addEventListener('click', clearHistory);
        document.getElementById('closeHistoryBtn').addEventListener('click', hideHistory);

        // Tekan Enter untuk mengirim
        document.getElementById('prompt').addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                generateText();
            }
        });

        // Muat contoh acak saat halaman dimuat
        document.addEventListener('DOMContentLoaded', () => {
            initializeModelSelector();
            loadExamples();
            logToConsole('Sistem siap digunakan');
            
            // Check for any initial errors
            if (!navigator.onLine) {
                updateStatus('error', 'Tidak ada koneksi internet');
                logToConsole('Peringatan: Tidak ada koneksi internet', 'warning');
            }
        });

        // Listen for online/offline events
        window.addEventListener('online', () => {
            updateStatus('connected', 'Koneksi internet pulih');
            logToConsole('Koneksi internet pulih', 'success');
        });

        window.addEventListener('offline', () => {
            updateStatus('error', 'Tidak ada koneksi internet');
            logToConsole('Peringatan: Tidak ada koneksi internet', 'warning');
        });
    </script>
</body>
</html>
